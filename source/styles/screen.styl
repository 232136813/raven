// -- Browser elements -------------------------------------------------
::-webkit-scrollbar {
    width: 5px
}
::-webkit-scrollbar:horizontal {
    height: 5px
}
::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.2)
}
::-webkit-scrollbar-thumb {
    border-radius: 3px
    background: control-focus-colour
}
::-webkit-scrollbar-thumb:inactive {
    background: control-colour
}

// -- Base elements ----------------------------------------------------
* {
    box-sizing: border-box
}
*:focus {
    outline: none
}
html {
    overflow: hidden
}
html, body, #app, #app > .layer, .screen {
    height: 100%
}
body {
    font-family: "Source Sans Pro", sans
    color: base-font-colour
    background: base-colour
    border: 1px solid #ccc
    -webkit-app-region: drag
}
input, textarea {
    font-family: "Source Sans Pro", sans;
    actionable: true
}

#app-title {
    position: fixed
    right: 10px
    bottom: 10px
    font-size: 16px
    color: #aaa
    text-transform: uppercase
    font-weight: 600
    z-index: 200
}
#app-close-button {
    action-button()
    position: fixed
    text-decoration: none
    font-size: 24px
    color: #aaa
    right: 20px
    top: 10px
    z-index: 9000
    width: 32px
    height: 32px
    text-align: center
    line-height: 32px

    &:hover {
        color: base-font-colour
    }
}

// -- Screens, Fields and Buttons --------------------------------------
.hidden {
    display: none
}
.centred {
    margin: 0 auto
}
.welcome {
    width: 70%
}
.half {
    width: 50%
}

.vertically-centred {
    position: relative
    top: 50%
    transform: translateY(-50%)
}

#app > .layer {
    transition: all 250ms ease-in-out
    position: relative
    left: 0px
    opacity: 1

    &.fading {
        opacity: 0
        left: -30%
    }
    &.hidden {
        display: none
    }
}

.screen {
    transition: all 250ms ease-in-out
    
    .section-info, .section-subinfo {
        text-align: center
        line-height: 140%
    }
    .section-info {
        font-size: 2em
        font-weight: 600
    }
    .section-subinfo {
        font-size: 1.5em
        font-weight: 300
        color: #888
    }
    .section-heading {
        margin-bottom: 2em
    }
    .form-feed {
        margin-bottom: 4em
    }
}

.regular-screen {
    padding: 10px 60px
    
    .screen-heading {
        margin-bottom: 3em
        position: relative

        .screen-title {
            text-transform: uppercase
            font-weight: 600
            color: #aaa
            padding-top: 8px
        }
        .heading-buttons {
            position: absolute
            top: 0
            left: -32px
        }
        .heading-button {
            @extend .icon-button
        }
    }
}

.pretty-form {
    .button-group {
        text-align: right
        margin-top: 4em

        .button {
            display: inline-block
            margin-left: 2em
            padding-left: 30px
            padding-right: 30px
        }
    }
    .field {
        margin-bottom: 2em
    }
    .field label {
        font-weight: 600
    }
    .field .help-text {
        color: #bbb
        margin: 0.5em 0 1.5em 0

        code {
            color: #ccc
            font-family: "Source Code Pro"
            font-size: 0.9em
        }
        strong {
            font-weight: bold
        }
        em {
            font-style: italic
        }
    }
}

.field {
    margin: 0.5em 0 1em 0

    label {
        display: block
        font-size: 0.9em
        text-transform: uppercase
        color: #999
        padding: 5px 0
    }
}

.text-field {
    position: relative

    input {
        background: transparent
        box-shadow: none
        border: none
        border-bottom: 2px solid control-colour
        font-size: 20px
        color: #aaa
        display: block
        width: 100%
        height: 48px
        line-height: 48px
        padding: 0 10px
        letter-spacing: 1px

        &:focus {
            outline: none
            color: control-focus-colour
            border-color: control-focus-colour
        }
        &::-webkit-input-placeholder {
            color: #ccc
        }
    }
    &:before, &:after {
        content: ""
        display: block
        width: 2px
        height: 8px
        position: absolute
        bottom: 0px
        background: control-colour
    }
    &:before {
        left: 0px
    }
    &:after {
        right: 0px
    }
}

.file-field {
    actionable: true

    .base-field-group {
        position: relative
        height: 48px
        line-height: 48px

        &:before {
            @extend .text-field:before
        }
        &:after {
            @extend .text-field:after
        }
    }
    
    input {
        @extend .text-field input
        font-size: 16px;
        font-weight: 300;
        padding: 5px 20px;
        cursor: pointer

        &:hover {
            @extend .text-field input:focus
        }
    }
    .input-action-button {
        button: control-focus-colour control-focus-colour;
        position: absolute;
        margin: 0px;
        padding: 0 20px;
        right: 0px;
        top: 0px;
        z-index: 3;
    }
    &.hovered {
        input {
            @extend .file-field input:hover
        }
        .base-field-group:before, .base-field-group:after {
            background-color: control-focus-colour
        }
        .input-action-button {
            @extend .file-field .input-action-button:hover
        }
    }
}

.button {
    text-decoration: none
    actionable: true
}
.submit-button {
    button: secondary-colour secondary-accent-colour
}
.cancel-button {
    cursor: pointer
    margin: 10px 0
    text-align: center
    height: 48px
    line-height: 48px
    display: block
    text-transform: uppercase
    color: #aaa
    font-weight: 300
    &:hover {
        color: #777
    }
    &:active {
        transition: all 0.1s ease-out
        transform: scale3d(0.9, 0.9, 1)
    }
}

.action-list .action {
    action-button()
    padding-left: 64px
    margin-bottom: 1em
    position: relative
    cursor: pointer
    color: #777
    transition: all 0.3s ease-out
    
    .title {
        font-weight: 600
        font-size: 1.2em
        line-height: 150%
    }
    &:before {
        font-size: 48px
        line-height: 50px
        width: 64px
        text-align: center
        position: absolute
        left: 0px
        top: 0px
    }
    &:hover {
        color: base-font-colour
    }
}

.book-list {
    clearfix()
    text-align: center
    margin-bottom: 2em
    color: #888

    .book, .more {
        action-button()
        position: relative
        display: inline-block
        width: 150px
        height: 170px
        margin: 0 10px 10px 0
        border: 1px solid transparent
        transition: all 0.3s ease-out
        vertical-align: top
        overflow: hidden
        cursor: pointer

        .book-title, .book-update {
            position: absolute
            z-index: 3
            left: 0
            text-align: center
            width: 100%
            padding: 0 5px
            whitespace: nowrap
            text-overflow: ellipsis
            overflow: hidden
            background: rgba(255, 255, 255, 0.6)
        }
        .book-title {
            bottom: 20px;
            height: 30px
            line-height: 30px
            font-weight: 600
        }
        .book-update {
            bottom: 0px;
            height: 22px;
            line-height: 20px;
            text-transform: uppercase;
            font-size: 12px;
            color: #aaa;
        }        
        img {
            z-index: 2
            top: 50%
            left: 50%
            position: absolute
            transform: translateX(-50%) translateY(-50%)
            opacity: 0.6
        }
        &:before {
            position: absolute
            top: 0px
            left: 0px
            width: 100%
            height: 120px
            line-height: 120px
            text-align: center
            font-size: 48px
            color: #ccc
        }
        &:hover {
            color: base-font-colour
            border: 1px solid #ddd
            background: #fafafa
            img {
                opacity: 0.8
            }
        }
    }
    .new-item .book-title {
        height: 50px;
        line-height: 50px;
        font-weight: normal;
        font-size: 0.9em;
        text-transform: uppercase;
        bottom: 0px;
        color: #aaa;
    }
    .new-item .icon-new {
        icon: "\e0ce"
    }
    .more {
        line-height: 170px
        font-size: 1.4em
    }
}

// -- Editor -----------------------------------------------------------
.editor {
    height: 100%
    overflow-y: scroll
    padding: 40px 20px 30px 20px
    font-family: "Lora", serif


    header, .article-wrapper, article {
        actionable: true
    }
    header, .article-wrapper {
        max-width: 70%
        min-width: 500px
        margin: 0 auto
    }
    header {
        font-size: 2.5em
        font-weight: bold
        margin-bottom: 1em
        font-family: "PT Sans Caption", sans-serif
    }
    article {
        min-height: 100%
    }
    .article-wrapper {
        padding-bottom: 50px
        line-height: 1.4em
        font-size: 1.4em
        position: relative
        height: 100%
    }
    blockquote {
        border-left: 4px solid deepskyblue
        margin-left: -19px
        padding-left: 15px
        margin-right: 0px
        margin-bottom: 1.5em
    }
    p {
        margin: 0.5em 0 1.5em 0
    }
    h2 {
        font-size: 2em
        font-weight: bold
        margin: 1.5em 0 0.8em 0
        font-family: "PT Sans Caption", sans-serif
        color: #777
    }
    
    a {
	      text-decoration: none;
	      color: deepskyblue;
    }
    
    a:hover {
	      text-decoration: underline;
    }
    hr {
        border: none
        margin: 2em auto
        width: 30%
        text-align: center
        color: #e3e6e9
        position: relative

        &:before {
            font-family: Typicons
            content: "\e0b1  \e0b1  \e0b1"
            background: #f3f3f3
            display: inline-block;
            padding: 0 0.8em;
        }
        &:after {
            position: absolute
            width: 100%
            height: 1px
            background: #e3e6e9
            content: ""
            left: 0px
            top: 50%
            z-index: -1
        }
    }

}
.editor-container {
    height: 100%
    position: relative
    transition: margin 250ms ease-in-out
    padding-bottom: 32px

    .sidebar-active & {
        margin-left: 350px
        overflow: hidden
    }

    .statusbar {
        position: absolute
        bottom: 0px
        left: 0px
        padding: 0 10px
        text-transform: uppercase
        font-family: "Source Sans Pro", sans
        color: #999
        font-size: 0.8em
        background: #f3f3f3
        width: 100%
        z-index: 10
        height: 32px
        line-height: 32px
        
        strong {
            font-weight: 600
            padding-right: 0.3em
            font-size: 1.2em
        }
        #docstate {
            margin-left: 1em

            &:before {
                content: "/"
                padding-right: 1em
                font-size: 120%
                color: #ccc
                line-height: 100%
            }
        }
        .statusbar-panel {
            display: inline-block
        }
        .selected-words-panel {
            margin-left: 0.5em
            color: #bbb
        }
    }
}
.editor-heading {
    position: absolute
    top: 0px
    left: 0px
    padding: 10px 20px
    z-index: 20

    .menu-button {
        @extend .icon-button
    }
}
.sidebar-overlay {
    position: fixed
    height: 100%
    width: 5px
    z-index: 100
    opacity: 0.6
    transition: opacity 250ms ease-in-out
    top: 0px
    left: 0px


    .sidebar-active & {
        width: 100%
        opacity: 1

        .sidebar {
            left: 0px
        }
    }

    .overlay-area {
        width: 100%
        height: 100%
        position: absolute
        top: 0px
        left: 0px
    }

    .sidebar {
        background: invert-base-colour
        color: invert-base-font-colour
        width: 300px
        height: 100%
        padding: 10px
        overflow-y: auto
        position: absolute
        left: -295px
        transition: left 250ms ease-in-out

        input {
            height: 32px
            line-height: 32px
            font-size: 18px
        }
        .search-field i {
            position: absolute
            right: 10px
            width: 32px
            height: 32px
            font-size: 40px
            line-height: 25px
            text-align: right
            color: #999
            font-style: normal
        }
        input::-webkit-input-placeholder {
            color: #888
        }
        input:focus {
            color: control-colour
        }

        .tooling-section {
            margin-bottom: 1.5em
        }
        
        .tooling-section-title {
            font-weight: 600
            text-transform: uppercase
            color: #999
            font-size: 0.9em
            line-height: 120%
            margin-bottom: 5px

            .num-docs {
                float: right
                color: #ccc
                font-size: 1.1em
                margin-right: 20px
            }
        }

        .tooling-links {
            li {
                position: relative
            }
            li:before {
                position: absolute
                top: 0
                left: 0
                width: 32px
                height: 24px
                line-height: 24px
                font-size: 16px
                text-align: center
            }
            li:hover {
                background: lighten(invert-base-colour, 5%)
                margin: 0 -10px
                padding: 0 10px

                &:before {
                    left: 10px
                }
            }
            a {
                color: invert-base-font-colour
                text-decoration: none
                font-size: 1.1em
                line-height: 130%
                margin-bottom: 5px
                display: block
                padding-left: 32px
                height: 24px
                line-height: 24px
            }
            a, li {
                action-button()
                color: darken(invert-base-font-colour, 20%)
                &:hover {
                    color: invert-base-font-colour
                }
            }
            li {
                transition-property: background, color
            }
            .new-item, .more-items {
                text-transform: uppercase

                &, & a {
                    color: darken(invert-base-font-colour, 35%)
                    font-size: 0.9em
                }
                &, & a:hover {
                    color: darken(invert-base-font-colour, 15%)
                }
            }
            .more-items a {
                text-align: center
            }
        }
    }
}
#novel-home-selection {
     .footer-notes {
        text-align: center;
        color: #aaa;
        font-size: 1.1em;
    }
}
#about-screen {
    .welcome {
