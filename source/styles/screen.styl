  icon: "\e032"

.icon-new
  icon: "\e0cf"

.icon-new-item
  icon: "\e0cf"

.icon-text
  icon: "\e062"

.icon-menu
  icon: "\e116"

.icon-close
  icon: "î„¢"

.icon-export
  icon: "\e06d"

.icon-fullscreen
  icon: "\e012"

.icon-restore-window
  icon: "\e014"

.icon-back
  icon: "\e047"

.icon-settings
  icon: "\e050"

