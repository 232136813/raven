@import "nib"
@import "entypo-stylus"

// ---------------------------------------------------------------------
global-reset()
jsk-grid-width = 100%

base-font-colour = #424242
base-colour = #f3f3f3
control-colour = #aec6cf
control-focus-colour = #779ecb

invert-base-colour = base-font-colour
invert-base-font-colour = base-colour

primary-accent-colour = #c44878
primary-base-colour = #e0749e
primary-light-colour = #e08faf
primary-dark-colour = #952450

secondary-accent-colour = #1a6b62
secondary-colour = #37756e
secondary-light-colour = #7dc3bc
secondary-alternate-colour = #338d83

tertiary-accent-colour = #e3dc53
tertiary-colour = #bcb759
tertiary-light-colour = #f0eb7c

@font-face
  font-family: 'Typicons'
  font-weight: normal
  font-style: normal
  font-source: '../fonts/typicons/typicons', 'typicons'

entypo-define('Entypo', '../fonts/entypo/entypo', 'entypo')


// -- Functions --------------------------------------------------------
actionable(x)
  if x
    -webkit-app-region: no-drag
  else
    -webkit-app-region: drag

action-button()
  actionable: true
  transition: all 0.3s ease-out

  &:active {
      transition: all 0.1s ease-out
      transform: scale3d(0.9, 0.9, 1)
  }

button(base, accent)
  cursor: pointer
  margin: 10px 0
  text-align: center
  height: 48px
  line-height: 48px
  display: block
  font-weight: 600
  color: #eee
  text-transform: uppercase
  text-shadow: 0 1px 0 rgba(0, 0, 0, 0.4)
  background: base
  border-bottom: 3px solid accent
  transition: all 0.3s ease-out
  actionable: true
  &:hover
    background: lighten(base, 10%)
  &:active
    border-bottom-width: 1px
    padding-top: 2px
    background: darken(base, 10%)
    transition: all 0.1s ease-out

icon(char)
  &:before
    font-family: "Typicons"
    content: char

// -- Base classes -----------------------------------------------------
.icon-button {
    action-button()
    color: #aaa
    font-size: 24px
    line-height: 32px
    width: 32px
    height: 32px
    display: inline-block
    text-decoration: none
    text-align: center
    
    &:hover {
        color: base-font-colour
    }
}


// -- Icons ------------------------------------------------------------
